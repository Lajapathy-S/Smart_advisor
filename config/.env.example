# API Keys
XAI_API_KEY=your_xai_api_key_here
GOOGLE_API_KEY=your_google_ai_studio_key_here
OPENAI_API_KEY=your_openai_api_key_here
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# xAI Grok (optional: override model)
XAI_MODEL=grok-2-latest

# Vector Database Configuration
# Choose one: PINECONE or CHROMA
VECTOR_DB_TYPE=CHROMA
CHROMA_PERSIST_DIR=./data/chroma_db

# JSOM Catalog Configuration
JSOM_CATALOG_URL=https://catalog.utdallas.edu/previous-years/2024-2025/undergraduate/programs/undergraduate-degree-plans

# LLM Configuration
LLM_MODEL=grok-2-latest
TEMPERATURE=0.7
MAX_TOKENS=2000

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# Application Configuration
APP_TITLE=AI Smart Advisor
APP_PORT=8501
